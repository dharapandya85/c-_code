{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "C/C++: g++.exe build active file",
        "type": "shell",
        "command": "g++",
        "args": [
          "-std=c++17",
          "-static",
          "-Wall",
          "-Wextra",
          "-Wpedantic",
          "-Wshadow",
          "-Wformat=2",
          "-Wcast-align",
          "-Wconversion",
          "-Wsign-conversion",
          "-Wnull-dereference",
          "-g3",
          "-O0",
          "${file}",
          "-o",
          "${fileDirname}/outDebug"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": "$gcc"
      }
    ]
  }
  